pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    checkout scm
                }
            }
        }

        stage('Setup and Deploy') {
            steps {
                script {
                    sh '''
                    cd Chhaya_new_backend
                    chmod +x deploy.sh
                    ./deploy.sh
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
