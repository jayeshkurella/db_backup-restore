pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://gitlab.com/coderizers/app_view/chhaya_foundation.git'
            }
        }
        stage('Setup and Deploy') {
            steps {
                sh 'chmod +x deploy.sh'
                sh './deploy.sh'
            }
        }
    }
}
