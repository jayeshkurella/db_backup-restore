pipeline {
    agent any
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'chhaya_jenkins', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/chhaya_foundation.git'
                sh 'ls -R'
            }
        }
        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x /Chhaya_new_backend/scripts/setup_python_env.sh
                ./Chhaya_new_backend/scripts/setup_python_env.sh
                ''' 
            }
        }
        stage ('db_config') {
            steps {
                sh '''
                chmod +x /Chhaya_new_backend/scripts/db_config.sh
                ./Chhaya_new_backend/scripts/db_config.sh
                '''
            }
        }
        stage ('migration') {
            steps {
                sh '''
                chmod +x /Chhaya_new_backend/scripts/migration.sh
                ./Chhaya_new_backend/scripts/migration.sh
                ''' 
            }
        }
        stage ('runserver') {
            steps {
                sh '''
                chmod +x /Chhaya_new_backend/scripts/runserver.sh
                ./Chhaya_new_backend/scripts/runserver.sh
                '''
            }
        }
    }
}

