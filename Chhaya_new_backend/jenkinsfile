pipeline {
    agent any

    environment {
        PYTHON_VERSION = 'python3.10'
        VENV_DIR = '.venv'
        REQUIREMENTS_FILE = 'Chhaya_new_backend/requirement.txt' // Set path for requirements.txt
    }

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    // Creating Python virtual environment
                    sh """
                        sudo apt-get update
                        sudo apt-get install -y python3.10-venv python3-pip
                        python3 -m venv ${VENV_DIR}
                    """
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Debugging: List files in the workspace to verify requirements.txt location
                    echo "Listing files in workspace:"
                    sh 'ls -R'

                    // Check if requirements.txt exists
                    if (fileExists(REQUIREMENTS_FILE)) {
                        // Installing dependencies inside virtual environment
                        sh """
                            bash -c 'source ${VENV_DIR}/bin/activate && pip install --upgrade pip && pip install -r ${REQUIREMENTS_FILE}'
                        """
                    } else {
                        error "requirements.txt not found at ${REQUIREMENTS_FILE}"
                    }
                }
            }
        }

        stage('Set up Database') {
            steps {
                script {
                    // Add steps for setting up the database if required
                    echo 'Setting up Database...'
                }
            }
        }

        stage('Run Migrations') {
            steps {
                script {
                    // Add steps for running migrations if required
                    echo 'Running Migrations...'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Add steps for deployment if required
                    echo 'Deploying...'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            sh """
                rm -rf ${VENV_DIR}
            """
        }

        success {
            echo 'Build or Deployment succeeded!'
        }

        failure {
            echo 'Build or Deployment Failed!'
        }
    }
}
