pipeline {
    agent any
    environment {
        WORKSPACE_DIR = "${WORKSPACE}/Chhaya_new_backend/scripts"
    }
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'chhaya_jenkins', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/chhaya_foundation.git'
            }
        }

        stage ('Fix Line Endings') {
            steps {
                sh '''
                sudo apt-get install -y dos2unix
                dos2unix ${WORKSPACE_DIR}/*.sh
                '''
            }
        }

        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x ${WORKSPACE_DIR}/setup_python_env.sh
                bash ${WORKSPACE_DIR}/setup_python_env.sh
                '''
            }
        }

        stage ('db_config') {
            steps {
                sh '''
                chmod +x ${WORKSPACE_DIR}/db_config.sh
                bash ${WORKSPACE_DIR}/db_config.sh
                '''
            }
        }

        stage ('migration') {
            steps {
                sh '''
                chmod +x ${WORKSPACE_DIR}/migration.sh
                bash ${WORKSPACE_DIR}/migration.sh
                '''
            }
        }

        stage ('runserver') {
            steps {
                sh '''
                chmod +x ${WORKSPACE_DIR}/runserver.sh
                bash ${WORKSPACE_DIR}/runserver.sh
                '''
            }
        }
    }
}
