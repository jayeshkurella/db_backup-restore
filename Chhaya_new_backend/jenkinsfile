pipeline {
    agent any

    environment {
        PYTHON_VERSION = 'python3.10'
        VENV_DIR = '.venv'
        REQUIREMENTS_FILE = 'Chhaya_new_backend/requirements.txt'  // Path to requirements.txt
    }

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    // Create a Python virtual environment
                    sh """
                        python3 -m venv ${VENV_DIR}
                    """
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Add the ubuntugis PPA repository to get newer GDAL version
                    // This solves the issue of version mismatch for libgdal
                    sh """
                        sudo add-apt-repository ppa:ubuntugis/ppa -y
                        sudo apt update
                        sudo apt-get install -y libgdal-dev
                    """
                    
                    // Install Python dependencies from requirements.txt
                    sh """
                        bash -c 'source ${VENV_DIR}/bin/activate && pip install --upgrade pip && pip install -r ${REQUIREMENTS_FILE}'
                    """
                    
                    // Install GDAL from pip if needed
                    // Install the specific version that matches your required bindings (version 3.8.4)
                    sh """
                        bash -c 'source ${VENV_DIR}/bin/activate && pip install gdal==3.8.4'
                    """
                }
            }
        }

        stage('Set up Database') {
            steps {
                script {
                    // Add steps to set up your database here
                    echo 'Setting up Database...'
                }
            }
        }

        stage('Run Migrations') {
            steps {
                script {
                    // Add steps to run migrations here
                    echo 'Running Migrations...'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Add deployment steps here
                    echo 'Deploying...'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            // Remove the virtual environment to clean up after the build
            sh """
                rm -rf ${VENV_DIR}
            """
        }

        success {
            echo 'Build or Deployment succeeded!'
        }

        failure {
            echo 'Build or Deployment Failed!'
        }
    }
}
