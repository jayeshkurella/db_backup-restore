pipeline {
    agent any
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'chhaya_jenkins', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/chhaya_foundation.git'
            }
        }

        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                sudo chmod +x /var/lib/jenkins/workspace/chhaya_new/Chhaya_new_backend/scripts/setup_python_env.sh
                bash /var/lib/jenkins/workspace/chhaya_new/Chhaya_new_backend/scripts/setup_python_env.sh
                '''
            }
        }
        stage ('db_config') {
            steps {
                sh '''
                sudo chmod +x /var/lib/jenkins/workspace/chhaya_new/Chhaya_new_backend/scripts/db_config.sh
                bash /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend/scripts/db_config.sh
                '''
            }
        }
        stage ('migration') {
            steps {
                sh '''
                sudo chmod +x /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend/scripts/migration.sh
                bash /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend/scripts/migration.sh
                '''
            }
        }
        stage ('runserver') {
            steps {
                sh '''
                sudo chmod +x /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend/scripts/runserver.sh
                bash /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend/scripts/runserver.sh
                '''
            }
        }
    }
}