pipeline {
    agent any
    stages {
        stage ('Checkout') {
            steps {
                git branch: 'chhaya_jenkins', credentialsId: 'new-token1', url: 'https://gitlab.com/coderizers/app_view/chhaya_foundation.git'
            }
        }
        stage ('Debug: List Workspace Contents') {
            steps {
                sh '''
                echo "Current directory: $(pwd)"
                ls -R /var/lib/jenkins/workspace/chhaya_jenkins/Chhaya_new_backend
                '''
            }
        }
        stage ('Setup Virtual Environment, Install Dependencies') {
            steps {
                sh '''
                chmod +x scripts/setup_python_env.sh
                ./scripts/setup_python_env.sh
                '''
            }
        }
        stage ('db_config') {
            steps {
                sh '''
                chmod +x scripts/db_config.sh
                ./scripts/db_config.sh
                '''
            }
        }
        stage ('migration') {
            steps {
                sh '''
                chmod +x scripts/migration.sh
                ./scripts/migration.sh
                '''
            }
        }
        stage ('runserver') {
            steps {
                sh '''
                chmod +x scripts/runserver.sh
                ./scripts/runserver.sh
                '''
            }
        }
    }
}