[Unit]
Description=Gunicorn for Chhaya
After=network.target

[Service]
User=jenkins
Group=jenkins
Type=simple
WorkingDirectory=/var/lib/jenkins/workspace/chhaya-foundations/Chhaya_new_backend
ExecStart=/bin/bash -c 'source /var/lib/jenkins/workspace/chhaya-foundations/Chhaya_new_backend/venv/bin/activate && exec /var/lib/jenkins/workspace/chhaya-foundations/Chhaya_new_backend/venv/bin/gunicorn New_Backend.wsgi:application -b 0.0.0.0:8090 --error-logfile /var/log/chhaya/error.log --access-logfile /var/log/chhaya/access.log'
Restart=always
RestartSec=3
TimeoutSec=300

[Install]
WantedBy=multi-user.target
