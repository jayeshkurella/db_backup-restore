<odoo>

    <!-- Inherit the original OPD form view -->
    <record id="view_hms_opd_form_custom" model="ir.ui.view">
        <field name="name">hms.opd.form.custom</field>
        <field name="model">hms.opd</field>
        <field name="inherit_id" ref="customized_acs_hms.view_hms_opd_form"/> 
        <field name="arch" type="xml">

            <!-- Remove the BMI state field from the Anthropometry tab -->
            <xpath expr="//field[@name='bmi_state']" position="attributes">
                <attribute name="invisible">1</attribute> 
            </xpath>

            <!-- Remove the BMI field from the Anthropometry tab -->
            <xpath expr="//field[@name='bmi']" position="replace"></xpath>

            <!-- Add Investigation Tab after Insulin Treatment Tab -->
            <xpath expr="//page[@name='insulin_page']" position="after">
                <page name="investigation_page" string="Investigation">
                    <group>
                        <field name="investigation_notes"/>
                    </group>
                    <!-- Add a new button after the investigation_notes field -->
                    <button name="action_investigation" type="object" string="Old Investigation" class="oe_highlight"/>
                </page>
            </xpath>

            <!-- Add PNB button after the clinical_examination_notes field -->
            <xpath expr="//field[@name='clinical_examination_notes']" position="after">
                <button name="action_pnb" type="object" string="Patient Not Brought(PNB)" class="oe_highlight"/>
            </xpath>
            

            <!-- Add CCO Notes after Next Follow up Tab -->
            <xpath expr="//field[@name='cco_notes']" position="after">
                <group>
                    <field name="next_follow_up" string="Next Follow Up" />
                </group>
            </xpath>

        </field>
    </record>

</odoo>
