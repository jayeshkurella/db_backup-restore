<odoo>

    <record id="view_hms_investigation_tree" model="ir.ui.view">
        <field name="name">hms.investigation.tree</field>
        <field name="model">hms.investigation.wizard</field>
        <field name="arch" type="xml">
            <tree string="Old Investigation" create="false">
                <field name="investigation_date" string="Created On" />
                <field name="investigation_description" string="Description"/>
            </tree>
        </field>
    </record>

    <record id="action_hms_investigation" model="ir.actions.act_window">
        <field name="name">Investigations</field>
        <field name="res_model">hms.investigation.wizard</field>
        <field name="view_mode">tree</field>
        <field name="target">new</field>
    </record>

</odoo>