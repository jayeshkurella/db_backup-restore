<odoo>
    <data>
        <!-- Inherit the original Evaluation form view -->
        <record id="view_acs_patient_evaluation_form_inherit" model="ir.ui.view">
            <field name="name">Inherit Patient Evaluation Form</field>
            <field name="model">acs.patient.evaluation</field>
            <field name="inherit_id" ref="acs_hms.view_acs_patient_evaluation_form"/>
            <field name="arch" type="xml">

                <!-- Remove the BMI state field from the Evaluation view -->
                <field name="bmi_state" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <!-- Hide Timeline field -->
                <xpath expr="//field[@name='baseline']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
