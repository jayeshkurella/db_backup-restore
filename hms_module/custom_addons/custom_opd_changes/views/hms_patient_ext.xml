<odoo>

    <!-- Inherit the original Patient form view -->
    <record id="hms_patient_ext_form_view_inherit" model="ir.ui.view">
        <field name="name">hms_patient_ext_form_view_inherit</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="customized_acs_hms.hms_patient_ext_form_view"/>
        <field name="arch" type="xml">

            <!-- Remove the BMI state field from the Patient view -->
            <xpath expr="//field[@name='bmi_state']" position="replace"/>   

            <!-- Hide Timeline field -->
            <xpath expr="//field[@name='baseline']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>