<odoo>
    <!-- Tree View -->
    <record model="ir.ui.view" id="view_hms_annual_evaluation_tree">
        <field name="name">annual.evaluation.list</field>
        <field name="model">hms.annual.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Annual Evaluation">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hms_annual_evaluation_form" model="ir.ui.view">
        <field name="name">Annual Evaluation Form</field>
        <field name="model">hms.annual.evaluation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" invisible="state != 'draft'" type="object" string="Done" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" invisible="state != 'draft'" type="object"/>
                    <button name="action_draft" string="Draft" invisible="state != 'cancel'" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" field_id="name_0"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id" readonly="state in ['cancel','done']"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group>
                            <field name="physician_id" readonly="state in ['cancel','done']"/>
                            <field name="date" readonly="state in ['cancel','done']"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="details" string="Details" groups="acs_hms.group_hms_nurse">
                            <group>
                                <group>
                                    <label for="height"/>
                                    <div class="o_row">
                                        <field name="height" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="height_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="weight"/>
                                    <div class="o_row">
                                        <field name="weight" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="weight_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="temp"/>
                                    <div class="o_row">
                                        <field name="temp" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="temp_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="hr"/>
                                    <div class="o_row">
                                        <field name="hr" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="hr_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="rr"/>
                                    <div class="o_row">
                                        <field name="rr" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="rr_uom_name" nolabel="1"/> -->
                                    </div>
                                </group>
                                <group>
                                    <label for="systolic_bp"/>
                                    <div name="systolic_bp" class="o_row">
                                        <field name="systolic_bp" class="oe_inline"
                                               readonly="state in ['cancel','done']"/>
                                        <!-- <field name="systolic_bp_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="diastolic_bp"/>
                                    <div name="diastolic_bp" class="o_row">

                                        <field name="diastolic_bp" class="oe_inline"
                                               readonly="state in ['cancel','done']"/>
                                        <!-- <field name="diastolic_bp_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="spo2"/>
                                    <div class="o_row">
                                        <field name="spo2" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="spo2_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="rbs"/>
                                    <div class="o_row">
                                        <field name="rbs" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="rbs_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="head_circum"/>
                                    <div class="o_row">
                                        <field name="head_circum" class="oe_inline"
                                               readonly="state in ['cancel','done']"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="bmi" />
                                    <label for="muac"/>
                                    <div class="o_row">
                                        <field name="muac" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="muac_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="tsft"/>
                                    <div class="o_row">
                                        <field name="tsft" class="oe_inline" readonly="state in ['cancel','done']"/>
                                        <!-- <field name="tsft_uom_name" nolabel="1"/> -->
                                    </div>
                                </group>
                                <group>
                                    <label for="hip_circumference"/>
                                    <div class="o_row">
                                        <field name="hip_circumference" class="oe_inline" 
                                               readonly="state in ['cancel','done']"/>
                                        <!-- <field name="hip_circumstance_uom_name" nolabel="1"/> -->
                                    </div>
                                    <label for="waist_circumference"/>
                                    <div class="o_row">
                                        <field name="waist_circumference" class="oe_inline" 
                                               readonly="state in ['cancel','done']"/>
                                        <!-- <field name="waist_circumstance_uom_name" nolabel="1"/> -->
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hms_annual_evaluation" model="ir.actions.act_window">
        <field name="name">Annual Evaluation</field>
        <field name="res_model">hms.annual.evaluation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add an Annual Evaluation.
            </p>
        </field>
    </record>
</odoo>
