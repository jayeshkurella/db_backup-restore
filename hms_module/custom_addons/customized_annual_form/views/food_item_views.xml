<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_food_item_tree" model="ir.ui.view">
            <field name="name">food.item.tree</field>
            <field name="model">food.item</field>
            <field name="arch" type="xml">
                <tree string="Food Items">
                    <field name="dish_code"/>
                    <field name="name"/>
                    <field name="food_group"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_food_item_form" model="ir.ui.view">
            <field name="name">food.item.form</field>
            <field name="model">food.item</field>
            <field name="arch" type="xml">
                <form string="Food Item">
                    <sheet>
                        <group>
                            <field name="dish_code"/>
                            <field name="name"/>
                            <field name="food_group"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open the FoodItem form -->
        <record id="action_food_item" model="ir.actions.act_window">
            <field name="name">Food Items</field>
            <field name="res_model">food.item</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item for the FoodItem model -->
        <menuitem id="menu_food_item" name="Food Items" sequence="10" parent="acs_hms_base.menu_physician_cofig" action="action_food_item"/>

    </data>
</odoo>
