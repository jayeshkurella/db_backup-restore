<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="customized_acs_hms.hms_patient_ext_form_view" model="ir.ui.view">
            <field name="name">customized_acs_hms.hms_patient_ext_form_view</field>
            <field name="model">hms.patient</field>
            <field name="inherit_id" ref="acs_hms_base.view_patient_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='gov_code']" position="replace">
                    <field name="gov_code" string="Aadhar Card No."/>
                </xpath>
                <xpath expr="//field[@name='gender']" position="before">
                    <field name="enrollment_no" required="False"/>
                    <field name="study_code" required="False"/>
                </xpath>
                <xpath expr="//field[@name='gender']" position="after">
                    <field name="date_of_record" string="Enrollment Date" required="False"/>
                    <field name="diagnosis_date" required="False"/>
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="study_center" required="False"/>
                    <field name="study_sub_code" required="False"/>

                </xpath>
                <xpath position="after" expr="//field[@name='birthday']">
                    <field name="enrollment_date" string="Date of Record" required="False"/>
                    <field name="diabetes_age" required="False"/>
                    <field name="include_exclude" required="False"/>
                </xpath>
                <xpath expr="//field[@name='weight']" position="replace">
                    <field name="weight" readonly="0" force_save="1" class="oe_inline"/>
                    <!-- <field name="weight_uom_name" nolabel="1" style="margin-left:5px"/> -->
                </xpath>
                <xpath expr="//field[@name='height']" position="replace">
                    <field name="height" readonly="0" force_save="1"/>
                    <!-- <field name="height_uom_name" nolabel="1"
                           style="margin-left:5px"/> -->
                </xpath>
                <xpath expr="//field[@name='title']" position="replace"/>
                <xpath expr="//h1" position="before">
                    <field name="title" placeholder="Title"/>
                </xpath>
                <xpath expr="//field[@name='temp']" position="replace">
                    <field name="temp" string="Temp (Â°C)" readonly="0"/>
                    <!-- <field name="temp_uom_name" nolabel="1"
                           style="margin-left:5px"/> -->
                </xpath>
                <xpath expr="//field[@name='rbs']" position="replace">
                    <field name="rbs" string="RBS (mg/dl)" readonly="0"/>
                    <!-- <field name="rbs_uom_name" nolabel="1" style="margin-left:5px"/> -->
                </xpath>

                <xpath expr="//field[@name='rr']" position="replace">
                    <label for="rr"/>
                    <div class="o_row">
                        <field name="rr" readonly="0" class="oe_inline"/>
                        <!-- <field name="rr_uom_name" nolabel="1" style="margin-left:5px"/> -->
                    </div>
                </xpath>

                <!-- <xpath expr="//field[@name='diastolic_bp_uom_name']" position="replace">
                    <field name="systolic_bp_uom_name" nolabel="1" style="margin-left:5px"/>
                </xpath> -->

                <xpath expr="//div[@name='diastolic_bp']" position="after">
                    <label for="baseline">Baseline</label>
                    <div class="o_row">
                        <field name="baseline" force_save="1"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='spo2']" position="replace">
                    <field name="spo2" string="SpO2 (%)" readonly="0"/>
                    <!-- <field name="spo2_uom_name" nolabel="1"
                           style="margin-left:5px"/> -->
                </xpath>

                <xpath expr="//field[@name='bmi_state']" position="replace">
                    <field name="bmi_state" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='bmi']" position="replace">
                    <field name="bmi" readonly="0"/>
                </xpath>
                <xpath expr="//notebook//page[@name='info']//group[@name='basic_details']//field[@name='acs_religion_id']"
                       position="replace">
                    <field name="religion" required="False" placeholder="Select from here"/>
                    <field name="category" required="False" placeholder="Select from here"/>
                </xpath>
                <field name="caste" position="after">
                    <field name="consanguinity" placeholder="Select from here"/>
                    <field name="jhrn_reg_no" required="False"/>
                </field>
                <xpath expr="//field[@name='department_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='acs_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook//page[@name='info']/group/group/field[@name='nationality_id']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook//page[@name='info']/group/group/field[@name='passport']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook//page[@name='info']//field[@name='marital_status']" position="after">
                    <label string="Maternal Height" for="maternal_height"/>
                    <div class="o_row">
                        <field name="maternal_height"/>
                        <field name="acs_height_name"/>
                    </div>
                    <label string="Paternal Height" for="paternal_height"/>
                    <div class="o_row">
                        <field name="paternal_height"/>
                        <field name="acs_height_name"/>
                    </div>
                    <label string="Mid Paternal Height" for="mid_parental_height"/>
                    <div class="o_row">
                        <field name="mid_parental_height" force_save="1"/>
                        <field name="acs_height_name"/>
                    </div>
                    <label string="Birth Weight" for="birth_weight"/>
                    <div class="o_row">
                        <field name="birth_weight" required="False"/>
                        <field name="acs_weight_name"/>
                    </div>
                    <field name="referred_by"/>
                </xpath>
                <xpath expr="//notebook//page[@name='info']//field[@name='partner_longitude']" position="after">
                    <field name="longitude"/>
                </xpath>
                <xpath expr="//notebook//page[@name='info']//field[@name='partner_latitude']" position="after">
                    <field name="latitude"/>
                </xpath>
                <xpath expr="//notebook//page[@name='clinical_ass']//field[@name='bmi']" position="after">
                    <label for="muac"/>
                    <div class="o_row">
                        <field name="muac" string="MUAC (Cm)" class="oe_inline"/>
                        <!-- <field name="height_uom_name" nolabel="1"/> -->
                    </div>
                    <label for="tsft"/>
                    <div class="o_row">
                        <field name="tsft" string="TSFT (mm)"/>
                        <!-- <field name="height_uom_name" /> -->
                    </div>
                </xpath>
                <xpath expr="//notebook//page[@name='clinical_ass']//field[@name='bmi_state']" position="after">
                    <label for="hip_circumstance"/>
                    <div class="o_row">
                        <field name="hip_circumstance" string="Hip Circumference (Cm)" required="False"/>
                        <!-- <field name="height_uom_name" nolabel="1"
                               style="margin-left:5px"/> -->
                    </div>
                    <label for="waist_circumstance"/>
                    <div class="o_row">
                        <field name="waist_circumstance" string="Waist Circumference (Cm)" required="False"/>
                        <!-- <field name="height_uom_name"
                               nolabel="1" style="margin-left:5px"/> -->
                    </div>
                </xpath>
                <xpath expr="//notebook/page[@name='info']/group/group[@name='basic_details']/field[@name='occupation']"
                       position="attributes">
                    <attribute name="string">Patient Occupation</attribute>
                </xpath>
                <xpath expr="//notebook//page[@name='clinical_ass']" position="after">
                    <page name="socio_economic_page" string="SocioEconomic">
                        <group>
                            <group>
                                <field name="monthly_family_categorical_income" placeholder="Select from here"/>
                            </group>
                            <group>
                                <field name="monthly_family_income"/>
                            </group>
                        </group>
<!--                        <group string="Infrastructure" invisible="0">-->
<!--                        </group>-->
                        <field name="socioeconomic_infrastructure_ids" nolabel="1" invisible="1">
                            <tree editable="bottom">
                                <field name="access_home" required="0"/>
                                <field name="availability"/>
                            </tree>
                        </field>
                        <group string="Achievement Details" invisible="1">
                        </group>
                        <field name="patient_achievements_ids" nolabel="1" invisible="1">
                            <tree editable="bottom">
                                <field name="sr_no" required="0"/>
                                <field name="achievement"/>
                                <field name="year"/>
                                <field name="awards"/>
                                <field name="certificate"/>
                                <field name="other"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                

                <xpath expr="//notebook//page[@name='family_note']//field[@name='relation_id']" position="after">
                    <field name="dob"/>
                    <field name="education" column_invisible="1"  placeholder="Select from here"/> 
                    <field name="education_category" placeholder="Select from here"/>
                    <field name="education_qualifications_id" domain="[('id', 'in', education)]" options="{'no_open': True, 'no_quick_create': True, 'no_create_edit': True}" placeholder="Select from here"/>
                    <!-- <field name="education"/> -->
                    <field name="occupation" placeholder="Select from here"/>
                    <field name="occupation_category" placeholder="Select from here"/>
                </xpath>
                <xpath expr="//notebook//page[@name='family_note']//field[@name='related_patient_id']"
                       position="replace">
                    <field name="member_name"/>
                </xpath>

                <!--                <xpath expr="//notebook//page[@name='family_note']" position="after">-->
                <!--                    <page name="cco_page" string="CCO">-->
                <!--                        <field name="patient_cco_ids">-->
                <!--                            <tree editable="bottom">-->
                <!--                                <field name="complications" required="1"/>-->
                <!--                                <field name="comorbidities"/>-->
                <!--                                <field name="others"/>-->
                <!--                            </tree>-->
                <!--                        </field>-->
                <!--                    </page>-->
                <!--                </xpath>-->

                <!--                <xpath expr="//notebook//page[@name='clinical_ass']" position="after">-->
                <!--                    <page name="life_style_page" string="Life Style">-->
                <!--                        <group string="Weekly Physical Activity">-->
                <!--                        </group>-->
                <!--                        <field name="patient_physical_activity_ids" nolabel="1">-->
                <!--                            <tree editable="bottom">-->
                <!--                                <field name="activity_name" required="1"/>-->
                <!--                                <field name="child_rec"/>-->
                <!--                                <field name="mother_rec"/>-->
                <!--                                <field name="father_rec"/>-->
                <!--                            </tree>-->
                <!--                        </field>-->
                <!--                    </page>-->
                <!--                    <page name="diet_page" string="Diet Info">-->
                <!--                        <group string="Diet Info">-->
                <!--                        </group>-->
                <!--                        <field name="patient_diet_info_ids" nolabel="1">-->
                <!--                            <tree editable="bottom">-->
                <!--                                <field name="date" required="1"/>-->
                <!--                                <field name="day"/>-->
                <!--                                <field name="time"/>-->
                <!--                                <field name="food_consumed"/>-->
                <!--                                <field name="servings"/>-->
                <!--                                <field name="consistency"/>-->
                <!--                                <field name="quantity"/>-->
                <!--                                <field name="additional_comment"/>-->
                <!--                            </tree>-->
                <!--                        </field>-->
                <!--                    </page>-->
                <!--                </xpath>-->

            </field>
        </record>

        <record id="customized_acs_hms.hms_patient_ext_kanban_view" model="ir.ui.view">
            <field name="name">customized_acs_hms.hms_patient_ext_kanban_view</field>
            <field name="model">hms.patient</field>
            <field name="inherit_id" ref="acs_hms_base.patient_kanban_view"/>
            <field name="arch" type="xml">
                <xpath position="after" expr="//field[@name='gender']">
                    <field name="enrollment_no"/>
                </xpath>
                <xpath position="before" expr="//templates/t/div/div[@class='oe_kanban_details']/ul/li[1]">
                    <li t-if="record.age.raw_value">
                        <b>Study Center:</b>
                        <field name="study_center"/>
                    </li>
                </xpath>
                <xpath position="inside" expr="//templates/t/div/div[@class='oe_kanban_details']/ul">
                    <li>
                        <b>Enrollment No:</b>
                        <field name="enrollment_no"/>
                    </li>
                </xpath>
            </field>
        </record>

        <record id="customized_acs_hms.view_patient_filter_kanban_view" model="ir.ui.view">
            <field name="name">customized_acs_hms.view_patient_filter_kanban_view</field>
            <field name="model">hms.patient</field>
            <field name="inherit_id" ref="acs_hms_base.view_patient_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='gender']" position="after">
                    <filter string="Study Center" name="study_center" domain="[]"
                            context="{'group_by':'study_center'}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="enrollment_no" filter_domain="[('enrollment_no', 'ilike', self)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_patient_tree_inherit" model="ir.ui.view">
            <field name="name">patient.tree.inherit</field>
            <field name="model">hms.patient</field>
            <field name="inherit_id" ref="acs_hms_base.view_patient_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="enrollment_no"/>
                </xpath>
                <xpath expr="//field[@name='code']" position="replace"/>
            </field>
        </record>

    </data>
</odoo>